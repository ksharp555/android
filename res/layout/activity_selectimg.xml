<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ff495a" >

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="cancel"
                    android:textColor="@drawable/text_while"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="upload"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/activity_selectimg_send"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="post"
                    android:textColor="@drawable/text_while"
                    android:textSize="20sp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:ems="10"
                android:gravity="left|top"
                android:hint="write title about your advertisement.." >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:ems="10"
                android:gravity="left|top"
                android:hint="write details about your advertisement.." />

            <TextView
                android:id="@+id/position"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Click to get Location..."
                android:textSize="15sp" />

            <EditText
                android:id="@+id/viewRange"
                android:hint="input view Range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView1"
                android:editable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="input End Date" />

            <EditText
                android:id="@+id/endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="yyyy-mm-dd HH:mm:ss"
                ></EditText>

            <GridView
                android:id="@+id/noScrollgridview"
                android:layout_width="290dp"
                android:layout_height="350dp"
                android:layout_marginLeft="5dp"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:scrollbars="none|vertical"
                android:verticalSpacing="5dp" >
            </GridView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>